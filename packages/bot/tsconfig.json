{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true // rosnodejs is WONKY
  },
  "include": [
    "src/**/*"
  ]
}