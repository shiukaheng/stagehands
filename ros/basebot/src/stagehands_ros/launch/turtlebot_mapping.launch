<launch>
    <param name="use_sim_time" value="false" />

    <!-- Turtlebot3 -->
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="map_file" default="$(find stagehands_ros)/maps/gazebomap.yaml"/>
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>

    <!-- Launch turtlebot3 bringup-->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_robot.launch"/>

    <!-- Launch ROS autonomous slam: this launches the pathfinder as well as the SLAM node -->
    <include file="$(find ros_autonomous_slam)/launch/autonomous_explorer.launch">
        <arg name="model" value="$(arg model)" />
        <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>

    <include file="$(find raspicam_node)/launch/camerav2_1280x960.launch">
        <remap from ="/raspicam/camera_info" to="/camera_info" />
        <remap from ="/raspicam/image/compressed" to="/image" />
    </include>
    
    <!-- launch aruco ros to detect markers in view of turtlebot camera-->
    <include file="$(find aruco_ros)/launch/marker_publisher.launch">
        <arg name="ref_frame" value="map"/>
    </include>

    <!-- launch node to record and store location of aruco markers in map frame-->
    <node pkg="stagehands_ros" name="aruco_location_storage" type="aruco_location_storage.py"/>

    <!-- launch node to monitor map - this saves the map & aruco locations and kills everything once the map is stable -->
    <node pkg="stagehands_ros" name="map_monitor" type="map_monitor.py"/>

</launch>
