<launch>
    <param name="use_sim_time" value="false" />

    <!-- Turtlebot3 -->
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="map_file" default="$(find stagehands_ros)/maps/maps/generated_map.yaml"/>
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>

    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_robot.launch"/>

    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Node sending commands to robot over ROS and getting pose -->
    <node pkg="stagehands_ros" name="robot_position_server" type="robot_pose_server.py"/>
    <!-- Node sending commands to previous node from UI and returning pose to UI-->
    <!-- if this fails blame GPT4 not me -->
    <node name="webtopics_ros_interface" pkg="stagehands_js" type="run_js_node.sh" output="screen" />

    <include file="$(find raspicam_node)/launch/camerav2_1280x960.launch">
        <remap from ="/raspicam/camera_info" to "/camera_info"/>
        <remap from ="/raspicam/image/compressed" to "/image"/>
    </include>

    <!-- launch aruco ros to detect markers in view of turtlebot camera-->
    <include file="$(find aruco_ros)/launch/marker_publisher.launch">
        <arg name="ref_frame" value="camera_link"/>
    </include>

    <!-- AMCL -->
    <include file="$(find turtlebot3_navigation)/launch/amcl.launch"/>

    <!-- move_base -->
    <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
        <arg name="model" value="$(arg model)" />
        <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
    
    <!-- launch node to get visible marker data and determine initial pose estimate based on their locations-->
    <node pkg="stagehands_ros" name="initial_pose_estimate_aruco" type="initial_pose_estimate_aruco.py"/>

    <!-- rviz -->
    <group if="$(arg open_rviz)"> 
        <node pkg="rviz" type="rviz" name="rviz" required="true"
            args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>
    </group>
</launch>